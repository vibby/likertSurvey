{% extends "layout.html.twig" %}

{% block title %}Résultats{% endblock %}

{% block content %}
    <h1>Résultats</h1>

    <div class="count">
        Total : {{ pagination.getTotalItemCount }}
    </div>

    <table>
        <tr>
            <th>Clé</th>
            <th>Email</th>
            <th>Finalisé</th>
            <th>Email de feedback</th>
            <th>moi</th>
            <th>équipe</th>
        </tr>
        {% for article in pagination %}
            <tr>
                <td>{{ article.key }}</td>
                <td>{{ article.email }}</td>
                <td>{{ article.finished }}</td>
                <td>{{ article.emailFeedback }}</td>
                <td>{{ article.feedbackMyself }}</td>
                <td>{{ article.feedbackTeam }}</td>
            </tr>
        {% endfor %}
    </table>

    <p>Télécharger :</p>
    <ul>
        <li>
            <a href="{{ path('admin_list', {'_format': 'csv', 'filter': 'manager_under_five_collabs'}) }}">
                Les managers qui n’ont pas les réponses de 5 collaborateurs
            </a>
        </li>
    </ul>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}

