{% extends "layout.html.twig" %}

{% form_theme form _self %}

{% block head %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/likert.js') }}" type="text/javascript"></script>
{% endblock %}

{% block form_row %}
{% spaceless %}
    <div {% if form.get('attr').class is defined %}class="{{ form.get('attr').class }}"{% endif %}>
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{%- block form_label -%}
    {% if label is not same as(false) and label is not same as(" ") -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif -%}
        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        <{{ element|default('label') }}{% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>{{ translation_domain is same as(false) ? label : label|trans({}, translation_domain) }}</{{ element|default('label') }}>
    {%- endif -%}
{%- endblock form_label -%}

{% block form_widget_simple %}
{{ parent() }}
{% spaceless %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
    {% if type == 'text' or type == 'number' %}
        <button type="button">ok</button>
    {% endif %}
{% endspaceless %}
{% endblock form_widget_simple %}

{#% block choice_widget_collapsed %}
{% spaceless %}
    <select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
        {% if empty_value is not none %}
            <option value="">{{ empty_value|trans({}, translation_domain) }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
            {{ block('choice_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('choice_widget_options') }}
    </select>
    <button type="button">ok</button>
{% endspaceless %}
{% endblock choice_widget_collapsed %#}

{% block hidden_row %}
    {{ form_widget(form) }}
{% endblock hidden_row %}

{% block choice_widget_expanded %}
    {% spaceless %}
        <div {{ block('widget_container_attributes') }}>
            {% if form.vars.attr.class is defined and form.vars.attr.class == 'osgood' %}
                {% for child in form %}
                    {% if loop.first %}
                        {{ form_label(child) }}
                    {% endif %}
                {% endfor %}
            {% endif %}
            {% for child in form %}
                <span class="choiceItem">
                    {{ form_widget(child) }}
                    {% if form.vars.attr.class is defined and form.vars.attr.class == 'osgood' %}
                        <label for="{{ child.vars.id }}" class="required">{{ loop.index0 }}</label>
                    {% else %}
                        {{ form_label(child) }}
                    {% endif %}
                </span>
            {% else %}
                <a class="next">→</a>
            {% endfor %}
            {% if form.vars.attr.class is defined and form.vars.attr.class == 'osgood' %}
                {% for child in form %}
                    {% if loop.last %}
                        {{ form_label(child) }}
                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock choice_widget_expanded %}

{% block content %}
    <h2 class="steps">Étapes
        {% for page in pages -%}
            <span class="item {% if page < shownPage %}done{% endif %}{% if page == shownPage %}active{% endif %}" >
                {{ page }}
            </span>
        {%- endfor %}
    </h2>
    <h1>Enquête FdF management 2018</h1>
    <div class="main">
        <div class="mask"></div>
        <div class="nav"><a class="back button">←</a> <a class="next button">→</a> <a class="last button">→<span>❙</span></a></div>
        <form id="surveyForm" action="#" method="post">
            <div>
                {{ form_widget(form) }}
                <div>
                    {% if isLastPage %}
                        <p>Valider votre participation à l’enquête</p>
                        <input type="submit" class="button button-primary right" name="submit" value="Valider" />
                    {% else %}
                        <p>Valider cette partie et commencer la suivante</p>
                        <input type="submit" class="button button-primary right" name="submit" value="Continuer" />
                    {% endif %}
                </div>
            </div>
       </form>
    </div>
{% endblock %}
